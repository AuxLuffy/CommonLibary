<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.example.lenovo.fragmenttabhost.widget.NoScrollViewPager
        android:id="@+id/id_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </com.example.lenovo.fragmenttabhost.widget.NoScrollViewPager>

    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:background="@color/color_line"
        android:visibility="gone"
        ></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/tabbg"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/llyt_shop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="2dp"
            android:paddingTop="4dp"
            >


            <ImageView
                android:id="@+id/iv_shop"
                android:layout_width="23dp"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_icon_shop"
                />

            <TextView
                android:id="@+id/tv_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="@string/text_shop"
                android:textColor="@drawable/selector_tab_tvbg"
                android:textSize="@dimen/dp_13"

                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llyt_customer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            >


            <ImageView
                android:id="@+id/iv_customer"
                android:layout_width="23dp"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_icon_customer"
                />

            <TextView
                android:id="@+id/tv_customer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="@string/text_customer"
                android:textColor="@drawable/selector_tab_tvbg"
                android:textSize="@dimen/dp_13"
                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/llyt_my"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            >


            <ImageView
                android:id="@+id/iv_my"
                android:layout_width="23dp"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_icon_my"
                />

            <TextView
                android:id="@+id/tv_my"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="@string/text_my"
                android:textColor="@drawable/selector_tab_tvbg"
                android:textSize="@dimen/dp_13"
                />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>