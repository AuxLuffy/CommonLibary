<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.lenovo.service.basicpubliclibrary">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <!-- 动画  -->
        <activity android:name=".AnimationActivity"></activity>


        <activity android:name=".headerfloatanimation.HeaderFloatActivity"></activity>


        <activity android:name=".ComponentActivity"></activity>


        <activity android:name=".CompositeActivity"></activity>


        <activity android:name=".OptimizeActivity"></activity>
        <activity android:name=".StorageActivity"></activity>
        <activity android:name=".WidgetActivity"></activity>
    </application>

</manifest>