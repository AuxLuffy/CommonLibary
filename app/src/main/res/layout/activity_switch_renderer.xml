    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lenovo.service.basicpubliclibrary.opengl.SwitchRendererActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/tv_renderer1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="彩色立方体"/>

        <Button
            android:id="@+id/tv_renderer2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="纯色立方体"/>

