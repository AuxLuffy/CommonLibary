<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.lenovo.service.basicpubliclibrary.recyclerview.banner.RecyclerBanner
        android:id="@+id/recycler_banner1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recycler_banner_height" />
    <com.lenovo.service.basicpubliclibrary.recyclerview.banner.RecyclerBanner
        android:id="@+id/recycler_banner2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recycler_banner_height"
        android:layout_below="@+id/recycler_banner1"/>

</RelativeLayout>