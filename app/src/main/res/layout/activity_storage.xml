<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context="com.lenovo.service.basicpubliclibrary.AnimationActivity">
        <TextView
                android:id="@+id/ormlite"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#FFFFF0"
                android:gravity="center"
                android:text="数据库存储框架ORMLite"
                android:textColor="@color/black"

        />

        <TextView
                android:id="@+id/greenDao"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#F0E68C"
                android:gravity="center"
                android:text="greenDao"
                android:textColor="#CCCCCC"/>

        <TextView
                android:id="@+id/tvDBFlow"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#E6E6FA"
                android:gravity="center"
                android:text="DBFlow"
                android:textColor="#CCCCCC"

        />

        <TextView
                android:id="@+id/sugar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#FFF0F5"
                android:gravity="center"
                android:text="sugar"
                android:textColor="#CCCCCC"

        />

        <TextView
                android:id="@+id/realm"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#7CFC00"
                android:gravity="center"
                android:text="Realm"
                android:textColor="#CCCCCC"

        />

        <TextView
                android:id="@+id/cupboard"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#F0E68C"
                android:gravity="center"
                android:text="Cupboard"
                android:textColor="@color/black"
        />
        <TextView
                android:id="@+id/scan_sd_mp3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#ADD8E6"
                android:gravity="center"
                android:text="扫描SD卡的.mp3文件"
                android:textColor="#CCCCCC"

        />
        <TextView
                android:id="@+id/litepal"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#F08080"
                android:gravity="center"
                android:text="LitePal"
                android:textColor="@color/black"

        />

        <TextView
                android:id="@+id/tray"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#E0FFFF"
                android:gravity="center"
                android:text="Tray"
                android:textColor="#CCCCCC"

        />

        <TextView
                android:id="@+id/preferences"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#D3D3D3"
                android:gravity="center"
                android:text="Preferences"
                android:textColor="@color/black"
        />


    </LinearLayout>
</ScrollView>
