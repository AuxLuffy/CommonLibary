<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context="com.lenovo.service.basicpubliclibrary.AnimationActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#FFFFF0"
                android:gravity="center"
                android:textColor="#CCCCCC"
                android:text="四大组件"

        />

        <TextView
                android:id="@+id/tv_maillist"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#F0E68C"
                android:gravity="center"
                android:textColor="#CCCCCC"
                android:text="获取本地通讯录+字母检索功能"/>

        <TextView
                android:id="@+id/tv_multitype"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textColor="#CCCCCC"
                android:text="Multitype—Android复杂的列表视图新写法"
                android:background="#E6E6FA"
                android:gravity="center"

        />
        <TextView
                android:id="@+id/tv_h5_activity"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textColor="#CCCCCC"
                android:text="实用H5Activity"
                android:background="#FFF0F5"
                android:gravity="center"

        />
        <TextView
                android:id="@+id/tv_localphoto"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textColor="#CCCCCC"
                android:text="获取本地图片+拍照+图片显示框架"
                android:background="#E6E6FA"
                android:gravity="center"

        />


        <TextView
                android:id="@+id/tv_pulltorefresh"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textColor="#CCCCCC"
                android:text="pulltorefresh+BaseAdapter高级封装+Rxjava处理异步任务"
                android:background="#7CFC00"
                android:gravity="center"

        />

        <TextView
                android:id="@+id/tv_fragmentation"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textColor="#CCCCCC"
                android:text="Fragmentation—超好用的Fragment封装库"
                android:background="#F08080"
                android:gravity="center"
        />

        <TextView
                android:id="@+id/tv_picut"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textColor="#CCCCCC"
                android:text="图片剪辑"
                android:background="#ADD8E6"
                android:gravity="center"

        />
        <TextView
                android:id="@+id/tv_frosted_galss_effect"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textColor="#CCCCCC"
                android:text="Activity毛玻璃效果"
                android:background="#F08080"
                android:gravity="center"

        />
        <TextView
                android:id="@+id/tvNightMode"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textColor="#CCCCCC"
                android:text="夜间模式"
                android:background="#7CFC00"
                android:gravity="center"

        />
        <TextView
                android:id="@+id/tvQRCode"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textColor="#CCCCCC"
                android:text="二维码"
                android:background="#F08080"
                android:gravity="center"
    />
    <TextView
        android:id="@+id/tvShadowmasking"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textColor="#CCCCCC"
        android:text="指引遮盖蒙版"
        android:background="#E0FFFF"
        android:gravity="center"

        />
        <TextView
            android:id="@+id/tv_pinview"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="#CCCCCC"
            android:text="输入框"
            android:background="#F08080"
            android:gravity="center"
        />
        <TextView
            android:id="@+id/tvUpload"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="@color/black"
            android:text="上传图片"
            android:background="#E0FFFF"
            android:gravity="center"
        />

        <TextView
            android:id="@+id/tv_piechart"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="@color/black"
            android:text="环形图"
            android:background="#FFF0F5"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_radarchart"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="@color/black"
            android:text="雷达图"
            android:background="#CCCCCC"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_lineXchart"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="@color/black"
            android:text="折线图"
            android:background="#F08080"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_curvechart"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="@color/black"
            android:text="曲线图"
            android:background="#ADD8E6"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvNotificoation"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="@color/black"
            android:text="Notificoation消息通知的使用"
            android:background="#7CFC00"
            android:gravity="center" />



        <TextView
            android:id="@+id/tv_gallerypicker"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="@color/black"
            android:text="图片选择器"
            android:background="#36cfa4"
            android:gravity="center" />
    </LinearLayout>

</ScrollView>