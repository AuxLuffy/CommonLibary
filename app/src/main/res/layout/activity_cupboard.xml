<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <Button
                android:id="@+id/store_single_object"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="store_single_object"/>

        <Button
                android:id="@+id/store_multi_objects"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="store_multi_objects"/>

        <Button
                android:id="@+id/get_single_object"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="get_single_object"/>

        <Button
                android:id="@+id/get_all_objects"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="get_all_objects"/>

        <Button
                android:id="@+id/update_single_object"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="update_single_object"/>

        <Button
                android:id="@+id/update_all_objects"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="update_all_objects"/>

        <Button
                android:id="@+id/delete_single_object"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="delete_single_object"/>

        <Button
                android:id="@+id/delete_all_object"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="delete_all_object"/>

    </LinearLayout>
</ScrollView>
