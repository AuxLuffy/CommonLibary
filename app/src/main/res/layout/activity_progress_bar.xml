<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/activity_round_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:background="@color/brown1"
        android:orientation="vertical">

        <com.lenovo.service.basicpubliclibrary.ProgressBaranimation.widget.RxProgressBar
            android:id="@+id/flikerbar"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            app:loadingColor="#40c4ff"
            app:stopColor="#ff9800"
            app:textSize="12sp"/>

        <com.lenovo.service.basicpubliclibrary.ProgressBaranimation.widget.RxProgressBar
            android:id="@+id/round_flikerbar"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            app:loadingColor="#40c4ff"
            app:radius="20dp"
            app:stopColor="#ff9800"
            app:textSize="12sp"/>

        <Button
            android:id="@+id/bt_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重新下载"/>


        <com.lenovo.service.basicpubliclibrary.ProgressBaranimation.widget.RxRoundProgressBar
            android:id="@+id/rx_round_pd1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            app:rcBackgroundColor="@color/custom_progress_background"
            app:rcBackgroundPadding="2dp"
            app:rcMax="100"
            app:rcProgress="50"
            app:rcProgressColor="@color/custom_progress_orange_progress"
            app:rcRadius="0dp"/>
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="渐变进度条"/>
        <ProgressBar
            android:id="@+id/pb_line_of_credit"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:progress="40"
            android:progressDrawable="@drawable/progressbar_horizontal_white"/>
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="弧形进度条"/>
        <com.lenovo.service.basicpubliclibrary.ProgressBaranimation.widget.RxRoundProgress
            android:id="@+id/roundProgressBar1"
            android:layout_width="270dp"
            android:layout_height="270dp"/>

    </LinearLayout>

    </LinearLayout>